.bgk-img {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  filter: blur(20px);
  z-index: -1;
  transform: scale(1.5)
}

.navtabbar {
  height: 112rpx;
  width: 100%;
  color: #fff;
  text-align: center;
  position: relative;
}

.navtabbar > text {
  position: absolute;
  bottom: 0%;
  left: 13%;
}
.navtabbar-back {
  width: 40rpx;
  height: 49rpx;
  position: absolute;
  left: 5%;
  bottom: 0%;
}

.detail {
  width: 100%;
  height: 100%;
}

/**头部*/

.header {
  width: 94%;
  height: 500rpx;
  margin: 0px 3%;
  position: relative;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding-top: 10%;
}

.header-left {
  width: 300rpx;
  height: 300rpx;
  overflow: hidden;
  border-radius: 10rpx;
  position: relative;
  background-color: rgb(189, 23, 23);
}

.header-image {
  width: 100%;
  height: 100%;
}

.header-left-playcount {
  position: absolute;
  right: 1%;
  top: 2%;
  height: 30rpx;
  width: 100%;
  text-align: right;
  display: flex;
  justify-content: flex-end;
}

.header-left-play-count {
  height: 100%;
  width: 30rpx;
}

.header-left-play-count-text {
  font-size: 12px;
  line-height: 30rpx;
  color: #fff;
}

.header-right {
  width: 50%;
  height: 300rpx;
  position: relative;
   color: #fff;
}

.right-title {
  position: absolute;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 14px;
  font-weight: 600;
  width: 100%;
  overflow: hidden;
  top: 0%;
  left: 0%;
}

.right-content {
  position: absolute;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  width: 100%;
  overflow: hidden;
  font-size: 12px;
  color: rgb(241, 237, 237);
  bottom: 0%;
  left: 0%;
}

.music {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  min-height: 60%;
}

.music-header {
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
}
.music-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 8rpx;
}

.music-play-all {
  margin-left: 10%;
}
.music-all-count {
  color: #666;
  font-size: 12px;
   margin-top: 8rpx;
}

.music-item {
  height: 120rpx;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: space-between;
}
.music-item-count {
  width: 10%;
  height: 100%;
  color: rgb(211, 27, 27);
  position: relative;
}
.index {
  position: absolute;
  left: 50%;
  top: 38%;
  transform: translate(-50%,-50%)
}
.music-item-content {
  width: 78%;
  height: 100%;
}
.item-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
}
.item-content {
   text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  color: #666;
  font-size: 12px;
}
.play {
  width: 10%;
  height: 100%;
  position: relative;
}
.play-icon {
  width: 40rpx;
  height: 40rpx;
    position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%,-50%)
}